{
  "name": "declarapi-example",
  "version": "0.4.0",
  "description": "An example project using declarapi",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run generate",
    "build": "tsc",
    "dev": "tsc-watch --onSuccess 'node ./dist/index.js'",
    "start": "tsc && node ./dist/index.js",
    "test": "jest",
    "generate": "declarapi src/api-schema/api-schema.json ./src/generated-code && rm ./src/generated-code/api-schema-client.ts",
    "standard": "standardx src/**/*.ts",
    "standard:fix": "standardx --fix src/**/*.ts"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "preset": "ts-jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmagyar/declarapi-example.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mmagyar/declarapi-example/issues"
  },
  "homepage": "https://github.com/mmagyar/declarapi-example#readme",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "jest": "^26.1.0",
    "node-fetch": "^2.6.0",
    "standardx": "^5.0.0",
    "ts-jest": "^26.1.1",
    "tsc-watch": "^4.2.9",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "declarapi": "^0.5.2",
    "express": "^4.17.1",
    "install": "^0.13.0"
  }
}
