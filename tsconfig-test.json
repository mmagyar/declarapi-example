{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "outDir": "./transpiled",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strict": true,
    "declaration": true,
    "inlineSources": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "webworker",
    ],
    "types": ["@cloudflare/workers-types", "mocha", "chai" ]
  },
  "include": [
    "./test/**/*.ts",
    "./src/*.ts",
    "./src/**/*.ts"  ],
  "exclude": [
    "node_modules",
    "dist/",
    "**/*.spec.ts"
    ]
}
